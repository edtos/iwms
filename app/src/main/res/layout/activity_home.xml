<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="16dp"
    android:id="@+id/main"
    android:background="@color/white">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oracle WMS Cloud"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        />

    <!-- Orange Thick Horizontal Line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#FFA500"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Spinner -->
    <Spinner
        android:background="@drawable/background_border"
        android:id="@+id/environmentSpinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp" />

    <!-- Instructional Text -->
    <TextView
        android:drawableStart="@drawable/round_do_not_disturb_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use the environment button to add environment"
        android:textSize="14sp"
        android:textColor="#808080"
        android:layout_marginBottom="16dp" />

    <!-- Username Field with Material TextField -->
    <EditText
        android:id="@+id/usernameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="Username"
        android:background="@drawable/background_border"
>

    </EditText>

    <!-- Required Text Below Username Field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Required"
        android:textSize="12sp"
        android:textColor="#808080"
        android:layout_marginBottom="16dp"
        android:layout_gravity="end" />


        <EditText
            android:background="@drawable/background_border"
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#808080"
            android:inputType="textPassword"
            android:padding="8dp"
            android:hint="Password"
            android:textColor="#333333" />

    <!-- Required Text Below Password Field -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Required"
        android:textSize="12sp"
        android:textColor="#808080"
        android:layout_marginBottom="24dp"
        android:layout_gravity="end" />

    <!-- Sign In Button -->
    <Button
        android:id="@+id/signInButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:layout_marginBottom="24dp"
        android:padding="12dp" />

    <!-- Bottom Right Text Button with + Symbol -->
    <TextView

        android:id="@+id/addEnvironmentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Environment"
        android:textSize="16sp"
        android:layout_gravity="end"
        android:layout_marginTop="16dp"
        android:padding="18dp" />
</LinearLayout>
