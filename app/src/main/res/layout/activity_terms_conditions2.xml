<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background">

    <!-- Heading for Terms and Conditions -->
    <TextView
        android:id="@+id/legalTermsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Terms and Conditions"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center" />

    <!-- Scrollable Terms and Conditions Text -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/legalTermsText"
        android:layout_above="@id/button_container"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tvLegalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By using this application, you agree to the following terms and conditions. Please read them carefully. The terms include important information about your rights and obligations, as well as limitations and..."
            android:padding="8dp"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#333333" />
    </ScrollView>

    <!-- Button Container -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Disagree Button -->
        <Button
            android:id="@+id/btnDisagree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Disagree"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#E0E0E0"
            android:textColor="#333333" />

        <!-- Agree Button -->
        <Button
            android:id="@+id/btnAgree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Agree"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/yellowtheme"
            android:textColor="#333333" />
    </LinearLayout>

</RelativeLayout>
