<!-- res/drawable/button_style.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0"/> <!-- Light grey on press -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#000000"/> <!-- Green border for Accept -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparent background -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#000000"/> <!-- Green border for Accept -->
        </shape>
    </item>
</selector>
